# Configurações do Banco de Dados (use a connection string do Postgres do Supabase em produção)
# Exemplo (NÃO COMITE chaves reais):
# DATABASE_URL=postgresql://postgres:senha@host.supabase.co:5432/postgres?sslmode=require
DATABASE_URL=

# Configurações do JWT
JWT_SECRET=seu_jwt_secret_super_seguro_aqui
JWT_EXPIRES_IN=7d

# Configurações do Asaas
ASAAS_API_KEY=SUA_API_KEY_ASAAS
ASAAS_WALLET_ID=SEU_WALLET_ID_ASAAS
ASAAS_ENVIRONMENT=sandbox

# Configurações do Servidor
PORT=3002
NODE_ENV=development

# Configurações de Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Configurações de Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app
